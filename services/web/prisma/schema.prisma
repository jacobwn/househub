generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  telephone String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  finderProfile FinderProfile?
  posterProfile PosterProfile?
  adminProfile  AdminProfile?
}

model FinderProfile {
  userId String @id
  user   User   @relation(fields: [userId], references: [id])

  budget Int
}

model PosterProfile {
  userId String @id
  user   User   @relation(fields: [userId], references: [id])

  companyName String
}

model AdminProfile {
  userId String @id
  user   User   @relation(fields: [userId], references: [id])

  superAdmin Boolean
}

model House {
  id        Int      @id @default(autoincrement())
  address   String
  price     Int
  bedrooms  Int
  bathrooms Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}